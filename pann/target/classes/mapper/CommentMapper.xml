<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.arm.pann.mapper.CommentMapper">

<!-- 댓글 생성하기 -->
	<insert id="insert">
		insert into tbl_comment(cno,bno,comment,commenter)
		values(seq_comment.nextval, #{bno},#{comment}, #{commenter})
	</insert>
	
<!-- 댓글 읽기 -->
	<select id="read" resultType="org.arm.pann.domain.CommentDTO">
		select * from tbl_comment where cno =#{cno}
	</select>
	
		<!--댓글 수정한다 -->
	<update id="update">
		update tbl_comment set comment=#{comment},updateDate=sysdate
		where cno =#{cno}

	</update>
	
	<!-- 댓글 삭제 -->
	<delete id="delete">
		delete from tbl_comment where cno = #{cno}
	</delete>
	
</mapper>