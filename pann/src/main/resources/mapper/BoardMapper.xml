<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.arm.pann.mapper.BoardMapper">

	<!-- 테이블 조회 -->
	<select id="getList" resultType="org.arm.pann.domain.BoardDTO">
		SELECT * from tbl_board where
		bno > 0
	</select>

	<!-- 글 생성하기 -->
	<insert id="insert">
		insert into tbl_board(bno,title,content,writer)
		values(seq_board.nextval,
		#{title},#{content}, #{writer})
	</insert>

	<!-- 글 생성 시퀀스 : bno에 적용하기 -->
	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE"
			resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		insert into tbl_board(bno,title,content,writer)
		values(#{bno},#{title},#{content},#{writer})

	</insert>

	<!-- 특정 bno에 해당하는 글 읽기 -->
	<select id="read" resultType="org.arm.pann.domain.BoardDTO">
		select * from tbl_board where bno =#{bno}
	</select>

	<!-- 특정 bno에 해당하는 글 삭제 -->
	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>

	<!-- 제목,내용을 수정한다 -->
	<update id="update">
		update tbl_board set title=#{title},content=#{content},updateDate=sysdate
		where bno =#{bno}

	</update>
	<!-- 검색기능 -->
	<sql id="seachCriteria">
	<trim prefix="(" suffix=") AND " prefixOverrides="OR">
		<foreach item='type' collection="typeArr">
		<trim prefix="OR">
		<choose>
            <when test="type== 'T'.toString()">
                title LIKE '%' || #{keyword} ||'%')
            </when>
            <when test="type== 'C'.toString()">
                content LIKE '%' || #{keyword} ||'%')
            </when>
             <when test="type== 'W'.toString()">
                writer LIKE '%' || #{keyword} ||'%')
            </when>
        </choose>       
		</trim>
		</foreach>
		</trim>
	</sql>
	<!-- 페이징-->
	<select id="listPaging" resultType="org.arm.pann.domain.BoardDTO">
		<![CDATA[
		select bno,title,content,writer,regdate,updatedate from(
		select /*+ INDEX_DESC(tbl_board pk_board) */ rownum rn, bno,title,content,writer, regdate,updatedate
		from tbl_board where 
		]]>
		<include refid="seachCriteria"></include>
		<![CDATA[
		rownum <=#{pageNum} * #{amount}
		)
		where rn > (#{pageNum}-1) * #{amount}
		]]>
	</select>
	
	<!-- 전체 게시글 수 구하기 -->
	<select id="getTotalCount" resultType="int">
	select count(*) from tbl_board where 
	
	<include refid="seachCriteria"></include>
	bno > 0
	</select>
	
	
	

</mapper>